@model IEnumerable<WebScriptManager.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Список интеграторов</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mail)
        </td>
        <td align="center">
            @Html.ActionLink("Просмотреть", "Details", new { id = item.Id })                
            @{
                if (item.Id.ToString() == (Session["userId"] as string) || (Session["role"] as string) == "Admin")
                {
                        @Html.Label("", "    |    ");
                        @:       
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id });
                }
                if ((Session["role"] as string) == "Admin")
                {
                        @Html.Label("", "    |    ");
                        @:
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id });
                }
            }
        </td>
    </tr>
}

</table>
